# =====================================================
# Context Edge - Edge Server Configuration
# Multi-Source Data Fusion
# =====================================================

# =====================================================
# INFRASTRUCTURE
# =====================================================

# PostgreSQL
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_DB=context_edge
POSTGRES_USER=context_user
POSTGRES_PASSWORD=context_pass

# Redis
REDIS_HOST=redis
REDIS_PORT=6379

# Data Ingestion Service
DATA_INGESTION_URL=http://data-ingestion:8001

# =====================================================
# FEATURE FLAGS
# =====================================================

# Use mock data instead of real sources (for testing/POC)
USE_MOCK_SENSORS=true

# =====================================================
# PLC ADAPTERS
# =====================================================

# Modbus TCP
# MODBUS_HOST=192.168.1.100
# MODBUS_PORT=502
# MODBUS_UNIT_ID=1

# OPC UA
# OPCUA_SERVER_URL=opc.tcp://192.168.1.101:4840

# =====================================================
# MES ADAPTERS
# =====================================================

# Wonderware MES (AVEVA)
# MES_BASE_URL=https://mes.factory.com
# MES_API_KEY=your_api_key_here
# MES_USERNAME=api_user
# MES_PASSWORD=api_password

# =====================================================
# ERP ADAPTERS
# =====================================================

# SAP ERP
# ERP_BASE_URL=https://sap.corp.com
# ERP_USERNAME=api_user
# ERP_PASSWORD=api_password
# ERP_API_KEY=your_api_key_here

# =====================================================
# SCADA ADAPTERS
# =====================================================

# Ignition SCADA
# SCADA_BASE_URL=http://ignition.factory.com:8088
# SCADA_USERNAME=api_user
# SCADA_PASSWORD=api_password
# SCADA_TAG_PATHS=Line1/Station1/Temperature,Line1/Station1/Pressure,Line1/Station1/Running

# =====================================================
# HISTORIAN ADAPTERS
# =====================================================

# OSIsoft PI Historian
# HISTORIAN_BASE_URL=https://pi.factory.com
# HISTORIAN_USERNAME=api_user
# HISTORIAN_PASSWORD=api_password
# HISTORIAN_WINDOW_MINUTES=60
# HISTORIAN_TAGS=Temperature_Trend,Vibration_Trend,Pressure_Trend

# =====================================================
# PRODUCTION EXAMPLE: Multiple Sources
# =====================================================
# Uncomment to use real data sources in production:

# USE_MOCK_SENSORS=false

# PLC for real-time sensors
# MODBUS_HOST=192.168.1.100
# MODBUS_PORT=502

# MES for production context
# MES_BASE_URL=https://mes.factory.com
# MES_API_KEY=wonderware_api_key_xyz

# ERP for work orders
# ERP_BASE_URL=https://sap.corp.com
# ERP_USERNAME=context_edge_api
# ERP_PASSWORD=secret_password

# SCADA for equipment status
# SCADA_BASE_URL=http://ignition.factory.com:8088
# SCADA_USERNAME=context_edge
# SCADA_PASSWORD=secret_password
# SCADA_TAG_PATHS=Line1/Equipment/Status,Line1/Equipment/Alarms

# Historian for trends
# HISTORIAN_BASE_URL=https://pi.factory.com
# HISTORIAN_USERNAME=context_edge
# HISTORIAN_PASSWORD=secret_password
# HISTORIAN_WINDOW_MINUTES=30
